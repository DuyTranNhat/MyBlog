<div class="row" >
    <div class="col-md-4" >
        <form method="post" >
            <div asp-asp-validation-summary="All" class="text-danger" ></div>
          @*   <div class="form-group mb-4" >
                <label asp-for="inputModelEdit.Name"  class="control-label"></label>
                <input asp-for="inputModelEdit.Name" class="form-control" />
                <span asp-validation-for="inputModelEdit.Name" class="text-danger"></span>
            </div> *@
            <div class="form-group d-flex flex-row">
                <input type="submit" value="Comfirm Delete" class="btn btn-danger" />
                <a asp-page="./index" class="btn btn-outline-secondary mx-3">Back</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}