@page "/Admin/Role/Delete/{id}"
@model Migration_EF.Areas.Admin.Pages.Role.DeleteModel
@{
    ViewData["Title"] = "";
}

<h2>@ViewData["Title"]</h2>
<partial name="_StatusMessage" model="@Model.StatusMessage" ></partial>
<h3 class="text-danger" >Are you sure to delete role with id <strong>@Model.role.Name</strong></h3>
